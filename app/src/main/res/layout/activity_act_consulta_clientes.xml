<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
              android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vitalate.engenhariasoftware.actConsultaClientes">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Clientes"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:textAlignment="center"
                android:id="@+id/edt_consulta"
                android:hint="Consultar"
                android:layout_below="@+id/textView14"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/lst_conCliClientes"/>

        </LinearLayout>
    </ScrollView>

    <ListView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/lst_conCliClientes"
android:choiceMode="singleChoice"
android:layout_below="@+id/edt_consulta"
android:layout_alignParentEnd="true"/>

</LinearLayout>
